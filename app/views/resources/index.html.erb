<h1>Listing resources</h1>

<table>
  <tr>
    <th>Obj</th>
    <th>Obj type</th>
    <th>Status</th>
    <th>Title</th>
    <th>Summary</th>
    <th>Attatch file name</th>
    <th>Attatch file size</th>
    <th>Attatch content type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.obj_id %></td>
    <td><%= resource.obj_type %></td>
    <td><%= resource.status %></td>
    <td><%= resource.title %></td>
    <td><%= resource.summary %></td>
    <td><%= resource.attatch_file_name %></td>
    <td><%= resource.attatch_file_size %></td>
    <td><%= resource.attatch_content_type %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

